@model IEnumerable<AspNetApp.Models.Membership>
@{
    ViewData["Title"] = "Membership Options";
}

<style>
    .membership-section {
        background: #f8f9fa;
    }

    .membership-card {
        border: none;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .membership-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 123, 255, 0.2);
    }

    .membership-card .card-body {
        padding: 2rem;
    }

    .membership-card .btn-success {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease;
    }

    .membership-card .btn-success:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .membership-price {
        color: #007bff;
        font-size: 1.25rem;
        font-weight: bold;
    }
</style>

<section class="py-5 membership-section">
    <div class="container">
        <h2 class="mb-4 text-center text-primary">Choose Your Membership Plan</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success text-center">@TempData["Message"]</div>
        }

        <div class="row g-4 justify-content-center">
            @foreach (var option in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card membership-card shadow-sm">
                        <div class="card-body text-center">
                            <h4 class="card-title">@option.PlanName</h4>
                            <p class="card-text text-muted">@option.Description</p>
                            <p class="membership-price">$@option.PricePerMonth / month</p>
                            <form asp-action="Buy" asp-controller="Membership" method="post">
                                <input type="hidden" name="id" value="@option.Id" />
                                <button class="btn btn-success mt-3 px-4" type="submit">Buy Now</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
